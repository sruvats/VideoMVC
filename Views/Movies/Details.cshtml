@model video.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>
    @Model.Name
</h2>

<ul>
    <li>
        <b> Genre: </b> @Model.Genre
    </li>

    @if (Model.ReleaseDate != null)
    {
        <li>
            <b> ReleaseDate: </b>@Model.ReleaseDate
            
        </li>
    }

    @if (Model.DateAdded != null)
    {
        <li>
            <b> DateAdded: </b>@Model.DateAdded
            
        </li>
    }
    <li>
        <b> Number in Stock: </b> @Model.NumberInStock
    </li>
</ul>

